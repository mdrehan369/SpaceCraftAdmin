generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Design {
  id                     Int                      @id @unique @default(autoincrement())
  Category               String
  title                  String                   @unique
  imageUrl               String
  createdAt              DateTime                 @default(now())
  FreeDesignConsultation FreeDesignConsultation[]
}

model FreeDesignConsultation {
  id                 Int      @id @unique @default(autoincrement())
  property           Property
  city               City
  name               String
  phoneNumber        String
  isConsultationDone Boolean  @default(false)
  whatsappUpdates    Boolean  @default(false)
  createdAt          DateTime @default(now())
  designId           Int
  Design             Design   @relation(fields: [designId], references: [id], onDelete: Cascade)
}

model Project {
  id          Int      @id @unique @default(autoincrement())
  title       String
  slug        String
  address     String
  workDetails String
  customers   String[]
  imageUrls   String[]
}

model Review {
  id      Int    @id @unique @default(autoincrement())
  name    String
  address String
  review  String
  rating  Int    @default(4)
}

model Guide {
  id           Int            @id @unique @default(autoincrement())
  title        String
  description  String
  GuideContent GuideContent[]
}

model GuideContent {
  id      Int    @id @unique @default(autoincrement())
  heading String
  value   String
  guideId Int
  Guide   Guide  @relation(fields: [guideId], references: [id], onDelete: Cascade)
}

model DesignCategory {
  sessionId Int
  design    String
  id        Int     @id @unique @default(autoincrement())
  Session   Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}

model Session {
  id             Int              @id @unique @default(autoincrement())
  city           String
  latitude       String
  longitude      String
  createdAt      DateTime         @default(now())
  token          String           @unique
  DesignCategory DesignCategory[]
}

enum City {
  BOKARO
  DEOGHAR
  DHANBAD
  EAST_SINGHBHUM
  GIRIDIH
  HAZARIBAGH
  KODARMA
  RAMGARH
  RANCHI
  SARAIKELA
  WEST_SINGHBHUM
  OTHERS
}

enum Property {
  ONE_BHK
  TWO_BHK
  THREE_BHK
  FOUR_BHK_OR_DUPLEX
}
